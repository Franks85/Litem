    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "express-validator": "^5.0.3",
    "flash": "^1.1.0",
    "helmet": "^3.12.0",
    "lodash": "^4.17.4",
    "mocha": "^5.0.1",
    "mongoose": "^4.13.9",
